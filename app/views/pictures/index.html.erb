<div class="container">
  <div class="row main-section">
    <div class="sentence">
      <p>投稿一覧</p>
      <%= link_to '新規投稿', new_picture_path %>
    </div>
    <div class="image">

      <% @pictures.each do |picture| %>
        <% if picture.image.present? %>
          <%= link_to image_tag(picture.image.url), picture %>
        <% else %>
          <p><%= link_to 'no image', picture %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
